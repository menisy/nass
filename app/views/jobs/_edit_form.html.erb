
<%= form_for(@job, method: :put, html:{class: 'job_form'}) do |f| %>
  <% if flash[:error] %>
    <div class='alert alert-danger error-msg'>
      <%= flash[:error] %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-6">
      <div>
        <%= f.label :name %><br />
        <%= f.text_field :name, required: true %>
      </div>

      <div>
        <%= f.label :title %><br />
        <%= f.text_field :title, required: true %>
      </div>

      <div>
        <%= f.label :visible %>
        <%= f.check_box :visible %>
      </div>

      <div>
        <%= f.label :industry -%>
        <%= f.select(:industry_id, @industries.collect {|d| [d.name, d.id] }, required: true)%>
      </div>
      <br>
      <div>
        <%= f.label :number, 'Number of candidates needed' %><br />
        <%= f.text_field :number, required: true %>
      </div>

      <div>
        <%= f.label :joining_date %><br />
        <%= f.date_select :joining_date, required: true %>
      </div>
      <br>
      <div>
        <%= f.label :salary_from %><br />
        <%= f.text_field :salary_from, required: true %>
      </div>

      <div>
        <%= f.label :salary_to %><br />
        <%= f.text_field :salary_to, required: true %>
      </div>
      <div>
        <%= f.label :social_insurance %>
        <%= f.check_box :social_insurance %>
      </div>

      <div>
        <%= f.label :medical_insurance %>
        <%= f.check_box :medical_insurance %>
      </div>

      <div>
        <%= f.label :transportation %>
        <%= f.check_box :transportation %>
      </div>
    </div>
    <div class="col-sm-6">
      <div>
        <%= f.label :city -%>
        <%= f.select(:city_id, @cities.collect {|d| [d.name, d.id] }, required: true)%>
      </div>
      <br>
      <div>
        <%= f.label :area -%>
        <%= f.text_field :area, required: true%>
      </div>
      <div>
        <%= f.label :incentive %><br />
        <%= f.text_area :incentive, required: true %>
      </div>
      <div>
        <%= f.label :days_off %><br />
        <%= f.text_area :days_off, required: true %>
      </div>

      <div>
        <%= f.label :job_description %><br />
        <%= f.text_area :job_description, required: true %>
      </div>

      <%= f.label :education_level %> <br/>
      <%= f.select :education_level_id, @education_levels.collect{|d| [d.name, d.id]} ,required: true %>
      <br>

      <div>
        <%= f.label :qualifications %><br />
        <%= f.text_area :qualifications, required: true %>
      </div>
      <%= f.hidden_field :company_id, value: current_employer.company.id %>
      <div>
        <%= f.label :work_conditions %><br />
        <%= f.text_area :work_conditions, required: true %>
      </div>
    </div>
  </div>

  <%= f.submit 'Update Job', class: 'btn btn-success' %>

<% end %>