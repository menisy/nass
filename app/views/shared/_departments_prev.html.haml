- schools_page = ::Refinery::Page.find('schools')
- if @schools
  - @schools.each do |school|
    .news-item-prev
      - school_link = schools_page.url[:path].join('/')+"##{school.name.downcase}"
      = link_to school_link do
        %span.pull-left.img-prev= image_tag school.logo.url if school.logo
      = link_to school_link do
        %span.green-title= school.name
      = raw(truncate_html(school.description, length: 230))
      = link_to (t :more), school_link , class: 'more'
