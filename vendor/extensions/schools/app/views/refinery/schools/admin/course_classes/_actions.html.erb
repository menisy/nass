<ul>
  <% if ::Refinery::Schools::Admin::CourseClassesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.schools_admin_course_classes_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_schools_admin_course_class_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Schools::Admin::CourseClassesController.sortable? && ::Refinery::Schools::CourseClass.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Course Classes"),
                 refinery.schools_admin_course_classes_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Course Classes"),
                 refinery.schools_admin_course_classes_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
