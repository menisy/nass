<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(course) -%>">
  <span class='title'>
    <%= course.name %>

    <% if Refinery::I18n.frontend_locales.many? %>
      <span class='preview'>
        <% course.translations.each do |translation| %>
          <% if translation.name.present? %>
            <%= link_to refinery_icon_tag("flags/#{translation.locale}.png", :size => '16x11'),
                         refinery.edit_schools_admin_course_path(course, :switch_locale => translation.locale),
                         :class => 'locale' %>
          <% end %>
        <% end %>
      </span>
    <% end %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_schools_admin_course_path(course),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.schools_admin_course_path(course),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => course.name),
        :method => :delete %>
  </span>
</li>
