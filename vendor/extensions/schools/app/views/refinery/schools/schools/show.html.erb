<% content_for :body_content_title do %>
  <%= @school.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @school.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @school.description %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @school.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Logo</h1>
    <p>
      <%= image_fu @school.logo, nil %>
    </p>
  </section>
  <section>
    <h1>Visible</h1>
    <p>
      <%=raw @school.visible %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="schools">
      <% @schools.each do |school| %>
        <li>
          <%= link_to school.name, refinery.schools_school_path(school) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
