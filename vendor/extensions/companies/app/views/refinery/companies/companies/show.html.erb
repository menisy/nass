<% content_for :body_content_title do %>
  <%= @company.company_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Company Name</h1>
    <p>
      <%=raw @company.company_name %>
    </p>
  </section>
  <section>
    <h1>Field</h1>
    <p>
      <%=raw @company.field %>
    </p>
  </section>
  <section>
    <h1>Main Address</h1>
    <p>
      <%=raw @company.main_address %>
    </p>
  </section>
  <section>
    <h1>Nob Egypt</h1>
    <p>
      <%=raw @company.nob_egypt %>
    </p>
  </section>
  <section>
    <h1>Nob Abroad</h1>
    <p>
      <%=raw @company.nob_abroad %>
    </p>
  </section>
  <section>
    <h1>Logo</h1>
    <p>
      <%= image_fu @company.logo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="companies">
      <% @companies.each do |company| %>
        <li>
          <%= link_to company.company_name, refinery.companies_company_path(company) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
