<%= form_for [refinery, :companies_admin, @subscription] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @subscription,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :level -%>
    <%= f.number_field :level -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.subscriptions.admin.subscriptions.subscription'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @subscription.name) -%>
<% end -%>
