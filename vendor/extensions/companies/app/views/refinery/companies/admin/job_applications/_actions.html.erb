<ul>
  <% if ::Refinery::Companies::Admin::JobApplicationsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.companies_admin_job_applications_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_companies_admin_job_application_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Companies::Admin::JobApplicationsController.sortable? && ::Refinery::Companies::JobApplication.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Job Applications"),
                 refinery.companies_admin_job_applications_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Job Applications"),
                 refinery.companies_admin_job_applications_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
  <li>
    <%= link_to 'Export to Excel', '/exports/job_applications', class: 'btn btn-success' %>
  </li>
</ul>
