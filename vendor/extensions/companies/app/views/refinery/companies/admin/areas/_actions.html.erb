<ul>
  <% if ::Refinery::Companies::Admin::AreasController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.companies_admin_areas_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_companies_admin_area_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Companies::Admin::AreasController.sortable? && ::Refinery::Companies::Area.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Areas"),
                 refinery.companies_admin_areas_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Areas"),
                 refinery.companies_admin_areas_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
