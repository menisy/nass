<% content_for :body_content_title do %>
  <%= @industry.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @industry.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="industries">
      <% @industries.each do |industry| %>
        <li>
          <%= link_to industry.name, refinery.companies_industry_path(industry) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
