<% content_for :body_content_title do %>
  <%= @career_level.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @career_level.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="career_levels">
      <% @career_levels.each do |career_level| %>
        <li>
          <%= link_to career_level.name, refinery.companies_career_level_path(career_level) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
