<% content_for :body_content_title do %>
  <%= @job_type.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @job_type.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="job_types">
      <% @job_types.each do |job_type| %>
        <li>
          <%= link_to job_type.name, refinery.companies_job_type_path(job_type) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
