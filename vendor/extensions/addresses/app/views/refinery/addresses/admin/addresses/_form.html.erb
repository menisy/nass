<%= form_for [refinery, :addresses_admin, @address] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @address,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :street_name -%>
    <%= f.text_field :street_name -%>
  </div>

  <div class='field'>
    <%= f.label :apart_no -%>
    <%= f.text_field :apart_no -%>
  </div>

  <div class='field'>
    <%= f.label :building_no -%>
    <%= f.text_field :building_no -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.addresses.admin.addresses.address'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @address.name) -%>
<% end -%>
