<% content_for :body_content_title do %>
  <%= @home_photo.link %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @home_photo.description %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @home_photo.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @home_photo.link %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="home_photos">
      <% @home_photos.each do |home_photo| %>
        <li>
          <%= link_to home_photo.link, refinery.home_photos_home_photo_path(home_photo) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
